<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.neilhussain.popularmovies.MovieDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/fbutton_color_turquoise"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"
            android:textSize="28sp"
            android:id="@+id/movieTitle"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:id="@+id/posterView"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fbutton_color_emerald"
            android:textSize="24dp"
            android:lines="1"
            android:id="@+id/year"
            android:layout_toRightOf="@id/posterView"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fbutton_color_concrete"
            android:textSize="20dp"
            android:lines="1"
            android:id="@+id/length"
            android:layout_below="@+id/year"
            android:layout_toRightOf="@id/posterView"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:id="@+id/rating"
            android:textColor="@color/fbutton_color_silver"
            android:layout_toRightOf="@id/posterView"
            android:layout_below="@+id/length"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryTV"
        android:padding="15dp"
        android:textSize="12sp"
        >

        </TextView>



</LinearLayout>

</ScrollView>
